<% page_title "Person #{h @person.full_name} editieren" do %>

	<%= form_for(@person) do |f| %>
		<%# TODO code duplication %>
		<%= f.error_messages \
			:header_message => "Fehlerhafte Angaben", # 1 error prohibited this user from being saved
			:message => "Die folgenden Felder sind fehlerhaft:"
		%>

		<table class="form">
			<tr>
				<th><%= f.label :last_name, "Nachname:" %></th>
				<td><%= f.text_field :last_name %></td>
			</tr>
			<tr>
				<th><%= f.label :first_name, "Vorname:" %></th>
				<td><%= f.text_field :first_name %></td>
			</tr>
			<tr>
				<th><%= f.label :club, "Verein:" %></th>
				<td><%= f.text_field :club %></td>
			</tr>
			<tr>
				<th><%= f.label :medical_validity_text, "Medical gültig bis:" %></th>
				<%#= f.date_select :medical_validity, :order=>[:day, :month, :year], :include_blank=>true, :use_month_names=>german_month_names %>
				<td><%= f.text_field :medical_validity_text %> (Format: 15.10.2012 oder 2012-10-15)</td>
			</tr>
			<tr>
				<th></th>
				<td>
					<%= f.check_box :check_medical_validity %>
					<%= f.label :check_medical_validity, "Medical prüfen" %>
				</td>
			</tr>
			<tr>
				<th><%= f.label :club_id, "Vereins-ID:" %></th>
				<td><%= f.text_field :club_id %></td>
			</tr>
			<tr>
				<th><%= f.label :comments, "Bemerkungen:" %></th>
				<td><%= f.text_field :comments %></td>
			</tr>
		</table>

		<p><%= f.submit 'Speichern' %></p>
	<% end %>

	<p>
	<%= link_to 'Anzeigen', @person %> |
	<%= link_to 'Personenliste', people_path %>
	</p>

<% end %>

